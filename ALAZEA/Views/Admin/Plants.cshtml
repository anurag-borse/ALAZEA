    <script>
        $(document).ready(function () {
            // Custom tag validation
            $("form").on("submit", function () {
                var tags = $("#plantTags").val();
                var tagsValid = /^([a-zA-Z\s]+,)*[a-zA-Z\s]+$/.test(tags);
                if (!tagsValid) {
                    $("#plantTags").next(".text-danger").text("Tags must be strings and comma-separated.");
                    return false;
                } else {
                    $("#plantTags").next(".text-danger").text("");
                }

                return true;

            });


            $("#plantImagePath").change(function () {
                var files = this.files;
                if (files.length === 0) {
                    $(this).next('.custom-file-label').text('Choose at least one image.');
                } else {
                    $(this).next('.custom-file-label').text(files.length + ' file(s) selected');
                }

                for (let i = 0; i < files.length; i++) {
                    if (!files[i].type.startsWith('image/')) {
                        $(this).next('.text-danger').text('Please upload only images.');
                        return;
                    }
                }
                $(this).next('.text-danger').text('');
            });
        });
    </script>

