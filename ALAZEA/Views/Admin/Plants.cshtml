    <script>
        $(document).ready(function () {
            // Define the loadPlants function so it's accessible from anywhere in this scope
            function loadPlants() {
                console.log('Loading plants...');
                $.ajax({
                    url: '/Admin/GetAllPlants',
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        console.log('Data loaded:', data);
                        if (data && data.length > 0) {
                            var tableBody = '';
                            $.each(data, function (index, plant) {
                                tableBody += '<tr>';
                                tableBody += `<td><a href="javascript:void(0);" class="edit-plant" data-id="${plant.plantID}">${plant.name || 'N/A'}</a></td>`;
                                tableBody += '<td>' + (plant.category || 'N/A') + '</td>';
                                tableBody += '<td>' + $('<div>').text(plant.description || 'No description').html() + '</td>';
                                tableBody += '<td>Rs.' + (plant.price ? parseFloat(plant.price).toFixed(2) : '0.00') + '</td>';
                                tableBody += '<td>' + (plant.availability || 'Unknown') + '</td>';
                                tableBody += `<td><img src="${plant.imagePath || ''}" alt="${plant.name || 'Image'}" width="50"></td>`;
                                tableBody += '</tr>';
                            });
                            $('#plantsData').html(tableBody);

                        } else {
                            $('#plantsData').html('<tr><td colspan="6" class="text-center">No plants available</td></tr>');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Error loading data:', error);
                        $('#plantsData').html('<tr><td colspan="6" class="text-center">Failed to load data</td></tr>');
                    }
                });
            }

            // Initial Load
            loadPlants();

            // Edit plant functionality
            $(document).on('click', '.edit-plant', function () {
                console.log('Edit plant clicked');
                var plantID = $(this).data('id');

                $.ajax({
                    url: '/Admin/GetPlantById',
                    method: 'GET',
                    data: { id: plantID },
                    dataType: 'json',
                    success: function (data) {
                        console.log('Edit data loaded:', data);
                        if (!data.error) {
                            $('#editPlantModal #plantID').val(data.plantID);
                            $('#editPlantModal #plantName').val(data.name);
                            $('#editPlantModal #plantCategory').val(data.category);
                            $('#editPlantModal #plantDescription').val(data.description);
                            $('#editPlantModal #plantPrice').val(data.price);
                            $('#editPlantModal #plantAvailability').val(data.availability.toString());
                            $('#editPlantModal #plantTags').val(data.tags);
                            $('#editPlantModal').modal('show');
                        } else {
                            alert('Error: ' + data.error);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Failed to load plant details:', error);
                        alert('Failed to load plant details: ' + error);
                    }
                });
            });

            // Update plant
            $('#editPlantModal form').on('submit', function (e) {
                e.preventDefault();  // Prevent default form submission
                console.log('Submitting edit form');
                var formData = new FormData(this);

                $.ajax({
                    url: '/Admin/UpdatePlant',
                    method: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            console.log('Plant updated successfully!');
                            $('#editPlantModal').modal('hide');
                            loadPlants();  // This should refresh the list
                        } else {
                            console.error('Error updating plant:', response.error);
                            alert('Error updating plant: ' + response.error);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('Failed to update plant:', error);
                        alert('Failed to update plant: ' + error);
                    }
                });
            });
        });
    </script>
</body>

