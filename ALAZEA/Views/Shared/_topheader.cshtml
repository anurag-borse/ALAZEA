<div class="top-header-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="top-header-content d-flex align-items-center justify-content-between">
                    <!-- Top Header Content -->
                    <div class="top-header-meta">
                        <a href="#" data-toggle="tooltip" data-placement="bottom" title="infodeercreative@gmail.com"><i class="fa fa-envelope-o" aria-hidden="true"></i> <span>Email: infodeercreative@gmail.com</span></a>
                        <a href="#" data-toggle="tooltip" data-placement="bottom" title="+1 234 122 122"><i class="fa fa-phone" aria-hidden="true"></i> <span>Call Us: +1 234 122 122</span></a>
                    </div>

                    <!-- Top Header Content -->
                    <div class="top-header-meta d-flex">
                        <!-- Language Dropdown -->
                        <div class="language-dropdown">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle mr-30" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Language</button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">USA</a>
                                    <a class="dropdown-item" href="#">UK</a>
                                    <a class="dropdown-item" href="#">Bangla</a>
                                    <a class="dropdown-item" href="#">Hindi</a>
                                    <a class="dropdown-item" href="#">Spanish</a>
                                    <a class="dropdown-item" href="#">Latin</a>
                                </div>
                            </div>
                        </div>
                        <!-- Login -->
                        <div class="login">
                            <!-- If user is logged in -->
                            @if (Model.User != null)
                            {
                                <a href="#"><i class="fa fa-user" aria-hidden="true"></i> <span>@Model.Name</span></a>

                                <!-- Additional Dropdown for Logged-in User -->
                                <div class="language-dropdown">
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle mr-30" type="button" id="dropdownMenuButtonLoggedIn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButtonLoggedIn">
                                            <a class="dropdown-item" href="#">Orders</a>
                                            <a class="dropdown-item" href="#">Profile</a>
                                            <a class="dropdown-item" href="@Url.Action("Logout","Auth")">Logout</a>


                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <!-- If no user is logged in, show the Login button -->
                                <a href="@Url.Action("Login", "Auth")"><i class="fa fa-user" aria-hidden="true"></i> <span>Login</span></a>
                            }
                        </div>
                        <!-- Cart -->
                        <div class="cart">
                            <a href="#"><i class="fa fa-shopping-cart" aria-hidden="true"></i> <span>Cart <span class="cart-quantity">(1)</span></span></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
