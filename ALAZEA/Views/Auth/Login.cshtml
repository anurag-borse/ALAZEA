@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Register Page</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300" rel="stylesheet">


    <style>
        /* Basic Styles */
        body {
            background: linear-gradient(90deg, rgba(141,194,111,1) 0%, rgba(118,184,82,1) 50%);
            font-family: "Roboto", sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Login Page Container */
        .login-page {
            width: 360px;
            padding: 8% 0 0;
            margin: auto;
        }

        /* Form Styling */
        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        }

            .form input {
                font-family: "Roboto", sans-serif;
                outline: 0;
                background: #f2f2f2;
                width: 100%;
                border: 0;
                margin: 0 0 15px;
                padding: 15px;
                box-sizing: border-box;
                font-size: 14px;
            }

            .form button {
                font-family: "Roboto", sans-serif;
                text-transform: uppercase;
                outline: 0;
                background: #4CAF50;
                width: 100%;
                border: 0;
                padding: 15px;
                color: #FFFFFF;
                font-size: 14px;
                cursor: pointer;
            }

                .form button:hover {
                    background: #43A047;
                }

            .form .message {
                margin: 15px 0 0;
                color: #b3b3b3;
                font-size: 12px;
            }

                .form .message a {
                    color: #4CAF50;
                    text-decoration: none;
                }

            .form .register-form {
                display: none;
            }

        /* Logo Section Styling */
        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo {
            max-width: 100px;
            height: auto;
        }
    </style>
</head>

<body>

    <div class="login-page">
        <!-- Logo Section -->
        <div class="logo-container">
            <img src="~/alazea_template/img/core-img/logo.png" alt="Logo" class="logo">
        </div>

        <div class="form">
            <!-- Login Form -->
            <form class="login-form" method="post" action="/Auth/Login">
                <input type="email" name="Email" placeholder="Email" required />
                <input type="password" name="Password" placeholder="Password" required />
                <button type="submit">Login</button>
                <p class="message">@ViewBag.LoginErrorMessage</p>
                <p class="message">@ViewBag.RegisterErrorMessage</p>

                <p class="message">Not registered? <a href="javascript:void(0);" class="toggle-form">Create an account</a></p>
            </form>

            <!-- Register Form -->
            <form class="register-form" method="post" action="/Auth/Register">
                <input type="text" name="Name" placeholder="Name" required />
                <input type="email" name="Email" placeholder="Email Address" required />
                <input type="password" name="Password" placeholder="Password" required />
                <button type="submit">Create Account</button>
                <p class="message">@ViewBag.LoginErrorMessage</p>

                <p class="message">@ViewBag.RegisterErrorMessage</p>
                <p class="message">Already registered? <a href="javascript:void(0);" class="toggle-form">Sign In</a></p>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // JavaScript to toggle between login and register forms
        $('.toggle-form').click(function () {
            $('.login-form').toggle();
            $('.register-form').toggle();
        });
    </script>





</body>
</html>

<partial name="_toastr" />
